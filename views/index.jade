extends layout

block content

  nav
    div.nav-wrapper
      a.brand-logo.center(href="#") 午餐登記表

  .contain
    .row

      //back button
        .row#backBtnDiv
          .col.m1.l1
          .col.s12.m10.l10
            a.btn-floating.btn-large.waves-effect.waves-light.green#backBtn
              b 返回

      //form
      .col.s12.m4.l4.row#formDiv
        .col.m1.l1
        .col.s12.m10.l10.row.formStyle.z-depth-3
          form#formDetail(action="")
          .col.s12.m12.l12.row
            .input-field.col.s12.m12.l12
              i.material-icons.prefix query_builder
              .row
                .col.s2.m2.l2
                .col.s10.m10.l10#timeContent

            .input-field.col.s12.m12.l12
              i.material-icons.prefix account_circle
              input#input_companyId.validate(type="text" name="companyId")
              label(for="icon_telephone") 工號

            .input-field.col.s12.m12.l12
              i.material-icons.prefix translate
              input#input_name.validate(type="text" name="name")
              label(for="icon_telephone") 姓名

            .input-field.col.s12.m12.l12
              i.material-icons.prefix view_list
              .row
                .col.s2.m2.l2
                .col.s10.m10.l10.switch: p 
                  input.filled-in#filled-in-box(type="checkbox" name="item" value="要訂")
                  label(for="filled-in-box"): b#itemOption 便當
                  


            .col.s12.m12.l12(style="padding-top:60px;text-align:center")
              button.btn.waves-effect.waves-light#sendBtn(type="submit" name="action") 送出
                i.material-icons.right send

      //notice
      .row#modal1.modal
        .modal-content
          h4.center 登記成功
        .modal-footer
          a.modal-action.modal-close.waves-effect.waves-green.btn-flat 確定

      //notice2
      .row#modal2.modal
        .modal-content
          h4 Oops !!
          p
            h5.center 有欄位沒有填，請再確認一次!!
        .modal-footer
          a.modal-action.modal-close.waves-effect.waves-green.btn-flat 確定

      //write button
        .row#btnDiv
          .col.m1.l1
          .col.s12.m10.l10
            a.btn-floating.btn-large.waves-effect.waves-light.green#registBtn: b 登記

      //result
      .col.s12.m8.l8.row#detailDiv
        .col.m1.l1
        .col.s12.m10.l10
          .tabContent.z-depth-3
            table.bordered.highlight.centered
              thead.title-view
                tr
                  th.title 時間
                  th.title 工號
                  th.title 姓名
                  th.title 選項
              tbody#tbodyContent
